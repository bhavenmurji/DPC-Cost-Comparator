{
  "name": "dpc-comparator-backend",
  "version": "1.0.0",
  "description": "Backend API for DPC Cost Comparator",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:migrate": "psql -d dpc_comparator -f database/schema.sql",
    "db:create": "createdb -U postgres dpc_comparator",
    "db:drop": "dropdb -U postgres dpc_comparator",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:migrate",
    "test": "jest --config jest.backend.config.js",
    "test:watch": "jest --config jest.backend.config.js --watch",
    "test:coverage": "jest --config jest.backend.config.js --coverage",
    "lint": "eslint 'src/backend/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/backend/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/backend/**/*.{ts,tsx,json}'",
    "typecheck": "tsc --noEmit -p tsconfig.backend.json"
  },
  "keywords": [
    "dpc",
    "healthcare",
    "insurance",
    "cost-comparison"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/pg": "^8.10.9",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "prettier": "^3.1.1"
  }
}
